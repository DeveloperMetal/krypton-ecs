{
  "name": "@krypton/ecs",
  "version": "1.0.0",
  "main": "./lib/ecs.js",
  "types": "./lib/ecs.d.ts",
  "scripts": {
    "prepublishOnly": "yarn test && yarn lint",
    "prepare": "yarn build",
    "preversion": "yarn lint",
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags",
    "build": "tsc",
    "build:cleanup": "yarn lint && yarn format && yarn test && yarn build",
    "test": "jest --coverage",
    "watch:test": "jest --watchAll --coverage",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "docs": "typedoc --theme minimal --exclude **/*.spec.ts --out ./docs ./src"
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "@types/jest": "^26.0.14",
    "cross-env": "^7.0.2",
    "jest": "^26.5.3",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "^.+\\.spec\\.ts$"
  },
  "devDependencies": {
    "prettier": "^2.1.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.19.2"
  }
}
