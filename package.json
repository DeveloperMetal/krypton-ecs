{
  "name": "@kryptonstudio/ecs-src",
  "version": "1.0.0-alpha.11",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "url": "https://github.com/DeveloperMetal/krypton-ecs.git",
    "type": "git"
  },
  "bin": {
    "kecs": "./cli/index.js"
  },
  "scripts": {
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags",
    "test": "jest --coverage --roots ./src/ecs/",
    "watch:test": "jest --watchAll --coverage",
    "format": "prettier --write \"src/**/*.ts\"",
    "docs": "typedoc --theme minimal --tsconfig ./src/ecs/tsconfig.json --exclude \"**/*.spec.ts\" --out ./docs ./src/ecs/",
    "build:all": "concurrently -nlib,cli \"yarn build:lib\" \"yarn build:cli\"",
    "build:lib": "tsc -p ./src/ecs/tsconfig.json",
    "build:cli": "tsc -p ./src/cli/tsconfig.json",
    "build:package": "node ./build_package.js",
    "dev:lib": "chokidar \"./package.json\" \"./src/ecs**/*.ts\" -c \"yarn build\" --initial",
    "dev:cli": "chokidar \"./package.json\" \"./src/cli/**/*.ts\" -c \"yarn build\" --initial",
    "lint:lib": "tslint -p ./src/ecs/tsconfig.json",
    "lint:cli": "tslint -p ./src/cli/tsconfig.json",
    "lint:all": "yarn lint:lib && yarn lint:cli",
    "clean": "rimraf ./dist",
    "package": "yarn lint:all && yarn clean && yarn build:package && yarn build:all"
  },
  "dependencies": {
    "findup-sync": "^4.0.0",
    "glob": "^7.1.6",
    "js-yaml": "^4.1.0",
    "minimist": "^1.2.5",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/findup-sync": "^2.0.2",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.22",
    "@types/js-yaml": "^4.0.0",
    "@types/minimist": "^1.2.1",
    "@types/node": "^15.6.0",
    "@types/rimraf": "^3",
    "@types/yargs": "^16.0.1",
    "@yarnpkg/pnpify": "^3.0.0-rc.3",
    "chokidar-cli": "^2.1.0",
    "cli-progress": "^3.9.0",
    "colors": "^1.4.0",
    "concurrently": "^6.1.0",
    "cross-env": "^7.0.3",
    "jest": "^26.5.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.20.35",
    "typescript": "^4.0.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "^.+\\.spec\\.ts$"
  }
}
